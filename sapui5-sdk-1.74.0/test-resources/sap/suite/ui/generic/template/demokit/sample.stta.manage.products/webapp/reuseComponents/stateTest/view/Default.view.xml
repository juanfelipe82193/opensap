<core:View controllerName="STTA_MP.reuseComponents.stateTest.view.Default" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns="sap.m">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<l:content>
			<CheckBox text="{i18n>LIFECYCLE_PERMANENT}" selected="{component>/permanent}" />
			<CheckBox text="{i18n>LIFECYCLE_SESSION}" selected="{component>/session}" />
			<CheckBox text="{i18n>LIFECYCLE_PAGINATION}" selected="{component>/pagination}" />
			<CheckBox text="{i18n>LIFECYCLE_PAGE}" selected="{component>/page}" />
			<Label text="{i18n>STATE}" labelFor="state" />
			<Input value="{component>/state}" type="Number" change="stateChanged" />
			<CheckBox text="{i18n>SAME_AS_LAST}" enabled="false" selected="{component>/sameAsLast}" />
		</l:content>
	</l:VerticalLayout>
</core:View>