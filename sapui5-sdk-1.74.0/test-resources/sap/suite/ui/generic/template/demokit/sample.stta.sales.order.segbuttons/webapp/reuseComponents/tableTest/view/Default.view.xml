<core:View controllerName="ManageSalesOrderWithSegButtons.reuseComponents.tableTest.view.Default" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns="sap.m">
	<l:VerticalLayout>
		<Table id="idProductsTable"
			inset="false"
			items="" 
			growing="true"
			growingThreshold="10">
			<columns>
				<Column
					width="12em">
					<Text text="{i18n>PRODUCT}" />
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true">
					<Text text="{i18n>DISCOUNT_PRICE_TARGET}" />
				</Column>
				<Column
					minScreenWidth="Desktop"
					demandPopin="true"
					hAlign="End">
					<Text text="{i18n>CURRENCY}" />
				</Column>
				<Column
					minScreenWidth="Desktop"
					demandPopin="true"
					hAlign="Center">
					<Text text="{i18n>DAY}" />
				</Column>
			</columns>
		</Table>
	</l:VerticalLayout>
</core:View>