<mvc:View controllerName="sap.suite.ui.microchart.sample.DeltaMicroChartInGridTable.Page"
		  xmlns="sap.suite.ui.microchart" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" xmlns:table="sap.ui.table">

	<table:Table selectionMode="None" rows="{/Rows}">
		<table:columns>
			<table:Column>
				<m:Label text="Supplier"/>
				<table:template>
					<m:Label text="{Supplier}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Supplier ID"/>
				<table:template>
					<m:Label text="{Supplier ID}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Sales Manager"/>
				<table:template>
					<m:Label text="{Sales Manager}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Product ID"/>
				<table:template>
					<m:Label text="{Product ID}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Unit Price"/>
				<table:template>
					<m:Label text="{Unit Price}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Period"/>
				<table:template>
					<m:Label text="{Period}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Target Sales"/>
				<table:template>
					<DeltaMicroChart size="Responsive" height="18px" press="press" title1="Target" title2="Actual" value1="{Target}" value2="{Actual}" color="{TargetDoneColor}"/>
				</table:template>
			</table:Column>
		</table:columns>
	</table:Table>

</mvc:View>
