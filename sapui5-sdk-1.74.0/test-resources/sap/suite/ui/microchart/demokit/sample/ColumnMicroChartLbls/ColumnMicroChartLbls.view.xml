<mvc:View
	controllerName="sap.suite.ui.microchart.sample.ColumnMicroChartLbls.ColumnMicroChartLbls"
	xmlns="sap.suite.ui.microchart"
	xmlns:mvc="sap.ui.core.mvc">
	<ColumnMicroChart size="M" press="press" class="sapUiSmallMargin">
		<leftTopLabel>
			<ColumnMicroChartLabel label="0M" color="Good"/>
		</leftTopLabel>
		<rightTopLabel>
			<ColumnMicroChartLabel label="80M" color="Critical"/>
		</rightTopLabel>
		<leftBottomLabel>
			<ColumnMicroChartLabel label="June 1"/>
		</leftBottomLabel>
		<rightBottomLabel>
			<ColumnMicroChartLabel label="June 30"/>
		</rightBottomLabel>
		<columns>
			<ColumnMicroChartData value="60" color="Error"/>
			<ColumnMicroChartData value="80" color="Error"/>
			<ColumnMicroChartData value="100" color="Error"/>
			<ColumnMicroChartData value="60" color="Neutral"/>
			<ColumnMicroChartData value="55" color="Neutral"/>
			<ColumnMicroChartData value="15" color="Neutral"/>
		</columns>
	</ColumnMicroChart>
	<ColumnMicroChart size="S" press="press" class="sapUiSmallMargin">
		<leftTopLabel>
			<ColumnMicroChartLabel label="0M"/>
		</leftTopLabel>
		<rightTopLabel>
			<ColumnMicroChartLabel label="80M"/>
		</rightTopLabel>
		<leftBottomLabel>
			<ColumnMicroChartLabel label="June 1"/>
		</leftBottomLabel>
		<rightBottomLabel>
			<ColumnMicroChartLabel label="June 30"/>
		</rightBottomLabel>
		<columns>
			<ColumnMicroChartData value="65" color="Error"/>
			<ColumnMicroChartData value="90" color="Error"/>
			<ColumnMicroChartData value="75" color="Error"/>
			<ColumnMicroChartData value="95" color="Error"/>
			<ColumnMicroChartData value="100" color="Error"/>
			<ColumnMicroChartData value="90" color="Error"/>
			<ColumnMicroChartData value="80" color="Error"/>
			<ColumnMicroChartData value="35" color="Neutral"/>
			<ColumnMicroChartData value="65" color="Neutral"/>
			<ColumnMicroChartData value="55" color="Neutral"/>
			<ColumnMicroChartData value="60" color="Neutral"/>
			<ColumnMicroChartData value="5" color="Neutral"/>
			<ColumnMicroChartData value="15" color="Neutral"/>
			<ColumnMicroChartData value="15" color="Neutral"/>
		</columns>
	</ColumnMicroChart>

	<ColumnMicroChart size="L" press="press" class="sapUiSmallMargin" allowColumnLabels="true">
		<leftTopLabel>
			<ColumnMicroChartLabel label="0M" color="Good"/>
		</leftTopLabel>
		<rightTopLabel>
			<ColumnMicroChartLabel label="80M" color="Critical"/>
		</rightTopLabel>
		<leftBottomLabel>
			<ColumnMicroChartLabel label="June 1"/>
		</leftBottomLabel>
		<rightBottomLabel>
			<ColumnMicroChartLabel label="June 30"/>
		</rightBottomLabel>
		<columns>
			<ColumnMicroChartData value="60" label="Q1" color="Error"/>
			<ColumnMicroChartData value="80" label="Q2" displayValue="80M" color="Error"/>
			<ColumnMicroChartData value="-20" label="Q3" color="Error"/>
			<ColumnMicroChartData value="60" label="Q4" displayValue="avg" color="Neutral"/>
			<ColumnMicroChartData value="55" label="Q5" color="Neutral"/>
		</columns>
	</ColumnMicroChart>
</mvc:View>
