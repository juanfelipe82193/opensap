<mvc:View controllerName="sap.suite.ui.microchart.sample.BulletMicroChartInGridTable.Page"
	xmlns="sap.suite.ui.microchart" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" xmlns:table="sap.ui.table">

	<table:Table selectionMode="None" rows="{/Rows}">
		<table:columns>
			<table:Column>
				<m:Label text="Supplier"/>
				<table:template>
					<m:Label text="{Supplier}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Supplier ID"/>
				<table:template>
					<m:Label text="{Supplier ID}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Sales Manager"/>
				<table:template>
					<m:Label text="{Sales Manager}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Product ID"/>
				<table:template>
					<m:Label text="{Product ID}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Unit Price"/>
				<table:template>
					<m:Label text="{Unit Price}"/>
				</table:template>
			</table:Column>
			<table:Column>
				<m:Label text="Period"/>
				<table:template>
					<m:Label text="{Period}"/>
				</table:template>
			</table:Column>

			<table:Column>
				<m:Label text="Sales Target"/>
				<table:template>
					<BulletMicroChart targetValue="{Target}" minValue="{minValue}" maxValue="{maxValue}"
									  size="Responsive" height="18px" press="press">
						<actual>
							<BulletMicroChartData value="{Actual}" color="Good"/>
						</actual>
					</BulletMicroChart>
				</table:template>
			</table:Column>
		</table:columns>
	</table:Table>

</mvc:View>
