<mvc:View controllerName="sap.suite.ui.microchart.sample.ComparisonMicroChartInGenericTile.Page"
	xmlns="sap.suite.ui.microchart" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<m:GenericTile header="Revenue Dynamics"
		frameType="OneByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Standard Mode">
				<m:content>
					<ComparisonMicroChart scale="M" size="Responsive">
						<data>
							<ComparisonMicroChartData title="Americas"
								value="10" color="Good" />
							<ComparisonMicroChartData title="EMEA"
								value="50" color="Good" />
							<ComparisonMicroChartData title="APAC"
								value="-20" color="Error" />
						</data>
					</ComparisonMicroChart>

				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
	<m:GenericTile header="Revenue Dynamics"
		frameType="TwoByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Wide Mode" frameType="TwoByOne">
				<m:content>
					<ComparisonMicroChart scale="M" view="Wide" size="Responsive">
						<data>
							<ComparisonMicroChartData title="Americas"
								value="10" color="Critical" />
							<ComparisonMicroChartData title="EMEA"
								value="50" color="Good" />
							<ComparisonMicroChartData title="APAC"
								value="-20" color="Error" />
						</data>
					</ComparisonMicroChart>
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
	<m:GenericTile header="Comparative Annual Totals"
		subheader="Expenses By Region" frameType="TwoByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Actual and Target" unit="EUR">
				<m:content>
					<m:NumericContent scale="M" value="1.96"
						valueColor="Error" indicator="Up" />
				</m:content>
			</m:TileContent>
			<m:TileContent footer="Compare across regions" unit="EUR">
				<m:content>
					<ComparisonMicroChart scale="M" size="Responsive">
						<data>
							<ComparisonMicroChartData title="Americas"
								value="234" color="Good" />
							<ComparisonMicroChartData title="EMEA"
								value="97" color="Error" />
							<ComparisonMicroChartData title="APAC"
								value="197" color="Critical" />
						</data>
					</ComparisonMicroChart>
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
	<m:GenericTile header="Comparative Annual Totals"
		subheader="By Region" frameType="OneByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Compare across regions" unit="EUR">
				<m:content>
					<ComparisonMicroChart scale="M" size="Responsive">
						<data>
							<ComparisonMicroChartData title="Americas"
								value="234" color="Good" />
							<ComparisonMicroChartData title="EMEA"
								value="97" color="Error" />
							<ComparisonMicroChartData title="APAC"
								value="197" color="Critical" />
						</data>
					</ComparisonMicroChart>
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
	<m:GenericTile header="Comparative Annual Totals"
		subheader="Expenses By Region" frameType="TwoByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Actual and Target" unit="EUR">
				<m:content>
					<m:NumericContent scale="M" value="1.96"
						valueColor="Error" indicator="Up" />
				</m:content>
			</m:TileContent>
			<m:TileContent footer="Compare across regions" unit="EUR">
				<m:content>
					<ComparisonMicroChart scale="M" size="Responsive">
						<data>
							<ComparisonMicroChartData title="Americas"
								value="234" color="Good" />
							<ComparisonMicroChartData title="EMEA"
								value="97" color="Error" />
							<ComparisonMicroChartData title="APAC"
								value="197" color="Critical" />
						</data>
					</ComparisonMicroChart>
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
</mvc:View>
