<mvc:View
	controllerName="sap.suite.ui.microchart.sample.BulletMicroChartDeltaMode.BulletMicroChartDeltaMode"
	xmlns="sap.suite.ui.microchart" xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
		<m:Title text="DeltaMode with delta value" class="sapUiSmallMargin"/>
		<BulletMicroChart size="XS" scale="M" targetValue="100" forecastValue="110" class="sapUiSmallMargin" mode="Delta" showDeltaValue="true" showValueMarker="false" press="press">
			<actual>
				<BulletMicroChartData value="120" color="Good"/>
			</actual>
			<thresholds>
				<BulletMicroChartData value="0" color="Error"/>
				<BulletMicroChartData value="50" color="Critical"/>
				<BulletMicroChartData value="150" color="Critical"/>
				<BulletMicroChartData value="200" color="Error"/>
			</thresholds>
		</BulletMicroChart>
		<BulletMicroChart size="S" scale="M" targetValue="100" forecastValue="110" class="sapUiSmallMargin" mode="Delta" showDeltaValue="true" showValueMarker="true" press="press">
			<actual>
				<BulletMicroChartData value="120" color="Good"/>
			</actual>
			<thresholds>
				<BulletMicroChartData value="0" color="Error"/>
				<BulletMicroChartData value="50" color="Critical"/>
				<BulletMicroChartData value="150" color="Critical"/>
				<BulletMicroChartData value="200" color="Error"/>
			</thresholds>
		</BulletMicroChart>
		<BulletMicroChart size="M" scale="M" targetValue="100" forecastValue="110" class="sapUiSmallMargin" mode="Delta" showDeltaValue="true" showValueMarker="true" press="press">
			<actual>
				<BulletMicroChartData value="120" color="Good"/>
			</actual>
			<thresholds>
				<BulletMicroChartData value="0" color="Error"/>
				<BulletMicroChartData value="50" color="Critical"/>
				<BulletMicroChartData value="150" color="Critical"/>
				<BulletMicroChartData value="200" color="Error"/>
			</thresholds>
		</BulletMicroChart>
		<BulletMicroChart size="L" scale="M" targetValue="100" forecastValue="110" class="sapUiSmallMargin" mode="Delta" showDeltaValue="true" showValueMarker="true" press="press">
			<actual>
				<BulletMicroChartData value="120" color="Good"/>
			</actual>
			<thresholds>
				<BulletMicroChartData value="0" color="Error"/>
				<BulletMicroChartData value="50" color="Critical"/>
				<BulletMicroChartData value="150" color="Critical"/>
				<BulletMicroChartData value="200" color="Error"/>
			</thresholds>
		</BulletMicroChart>

		<m:Title text="DeltaMode with actual value" class="sapUiSmallMargin"/>

		<BulletMicroChart size="L" scale="M" minValue="-100" targetValue="0" maxValue="100" class="sapUiSmallMargin"
						  mode="Delta" showDeltaValue="false" showValueMarker="false" showActualValueInDeltaMode="true" showTargetValue="true" press="press">
			<actual>
				<BulletMicroChartData value="-60" color="Error"/>
			</actual>
		</BulletMicroChart>
</mvc:View>
