<mvc:View
	controllerName="sap.suite.ui.microchart.sample.AreaMicroChartInGenericTile.Page"
	xmlns="sap.suite.ui.microchart" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<m:GenericTile header="Revenue Dynamics"
		frameType="OneByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Target fulfilled">
				<m:content>
					<AreaMicroChart size="Responsive"
						minXValue="0" maxXValue="100" minYValue="0" maxYValue="100">
						<firstXLabel>
							<AreaMicroChartLabel label="June 1" color="Good" />
						</firstXLabel>
						<lastXLabel>
							<AreaMicroChartLabel label="June 30" color="Critical" />
						</lastXLabel>
						<firstYLabel>
							<AreaMicroChartLabel label="0M" color="Good" />
						</firstYLabel>
						<lastYLabel>
							<AreaMicroChartLabel label="80M" color="Critical" />
						</lastYLabel>
						<chart>
							<AreaMicroChartItem>
								<points>
									<AreaMicroChartPoint x="0" y="0" />
									<AreaMicroChartPoint x="30" y="20" />
									<AreaMicroChartPoint x="60" y="20" />
									<AreaMicroChartPoint x="100" y="80" />
								</points>
							</AreaMicroChartItem>
						</chart>
						<target>
							<AreaMicroChartItem>
								<points>
									<AreaMicroChartPoint x="0" y="0" />
									<AreaMicroChartPoint x="30" y="30" />
									<AreaMicroChartPoint x="60" y="40" />
									<AreaMicroChartPoint x="100" y="90" />
								</points>
							</AreaMicroChartItem>
						</target>
						<maxThreshold>
							<AreaMicroChartItem color="Good">
								<points>
									<AreaMicroChartPoint x="0" y="0" />
									<AreaMicroChartPoint x="30" y="40" />
									<AreaMicroChartPoint x="60" y="50" />
									<AreaMicroChartPoint x="100" y="100" />
								</points>
							</AreaMicroChartItem>
						</maxThreshold>
						<minThreshold>
							<AreaMicroChartItem color="Error">
								<points>
									<AreaMicroChartPoint x="0" y="0" />
									<AreaMicroChartPoint x="30" y="20" />
									<AreaMicroChartPoint x="60" y="30" />
									<AreaMicroChartPoint x="100" y="70" />
								</points>
							</AreaMicroChartItem>
						</minThreshold>
					</AreaMicroChart>
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
	<m:GenericTile header="Revenue Dynamics"
		frameType="TwoByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Target fulfilled" frameType="TwoByOne">
				<m:content>
					<AreaMicroChart size="Responsive"
						minXValue="0" maxXValue="100" minYValue="0" maxYValue="100"
						view="Wide">
						<firstXLabel>
							<AreaMicroChartLabel label="June 1" color="Good" />
						</firstXLabel>
						<lastXLabel>
							<AreaMicroChartLabel label="June 30" color="Critical" />
						</lastXLabel>
						<firstYLabel>
							<AreaMicroChartLabel label="0M" color="Good" />
						</firstYLabel>
						<lastYLabel>
							<AreaMicroChartLabel label="80M" color="Critical" />
						</lastYLabel>
						<chart>
							<AreaMicroChartItem>
								<points>
									<AreaMicroChartPoint x="0" y="0" />
									<AreaMicroChartPoint x="30" y="20" />
									<AreaMicroChartPoint x="60" y="20" />
									<AreaMicroChartPoint x="100" y="80" />
								</points>
							</AreaMicroChartItem>
						</chart>
						<target>
							<AreaMicroChartItem>
								<points>
									<AreaMicroChartPoint x="0" y="0" />
									<AreaMicroChartPoint x="30" y="30" />
									<AreaMicroChartPoint x="60" y="40" />
									<AreaMicroChartPoint x="100" y="90" />
								</points>
							</AreaMicroChartItem>
						</target>
						<maxThreshold>
							<AreaMicroChartItem color="Good">
								<points>
									<AreaMicroChartPoint x="0" y="0" />
									<AreaMicroChartPoint x="30" y="40" />
									<AreaMicroChartPoint x="60" y="50" />
									<AreaMicroChartPoint x="100" y="100" />
								</points>
							</AreaMicroChartItem>
						</maxThreshold>
						<minThreshold>
							<AreaMicroChartItem color="Error">
								<points>
									<AreaMicroChartPoint x="0" y="0" />
									<AreaMicroChartPoint x="30" y="20" />
									<AreaMicroChartPoint x="60" y="30" />
									<AreaMicroChartPoint x="100" y="70" />
								</points>
							</AreaMicroChartItem>
						</minThreshold>
					</AreaMicroChart>
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
</mvc:View>
