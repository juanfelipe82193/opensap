<mvc:View
	controllerName="sap.suite.ui.microchart.sample.BulletMicroChartCustomTooltip.BulletMicroChartCustomTooltip"
	xmlns="sap.suite.ui.microchart" xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
		<m:Title text="BulletMicroChart with Custom Tooltip" class="sapUiSmallMargin"/>
		<BulletMicroChart tooltip="Actual: {/actualValue} days&#10;Forecast: {/forecastValue} days" size="{/size}" minValue="{/minValue}" targetValue="{/targetValue}" forecastValue="{/forecastValue}" maxValue="{/maxValue}" class="sapUiSmallMargin" press="press">
			<actual>
				<BulletMicroChartData value="{/actualValue}" color="{/color}"/>
			</actual>
		</BulletMicroChart>
</mvc:View>
