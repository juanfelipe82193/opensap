<mvc:View
	controllerName="sap.suite.ui.microchart.sample.ComparisonMicroChartCv.ComparisonMicroChartCv"
	xmlns="sap.suite.ui.microchart"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<m:Label text="This sample chart always appears in wide view, regardless on the chart's actual width." class="sapUiTinyMargin"/>
	<ComparisonMicroChart scale="M" view="Wide" class="sapUiSmallMargin" press="press" width="32rem">
		<data>
			<ComparisonMicroChartData title="Americas" value="10" color="Critical"/>
			<ComparisonMicroChartData title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData title="APAC" value="-20" color="Error"/>
		</data>
	</ComparisonMicroChart>
	<ComparisonMicroChart scale="M" view="Wide" class="sapUiSmallMargin" press="press" width="32rem" shrinkable="true">
		<data>
			<ComparisonMicroChartData title="Americas" value="10" color="Critical"/>
			<ComparisonMicroChartData title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData title="APAC" value="-20"  color="Error"/>
			<ComparisonMicroChartData title="LTA" value="60"  color="Good"/>
			<ComparisonMicroChartData title="ALPS" value="-20" color="Error"/>
			<ComparisonMicroChartData title="Australia" value="55" color="Good"/>
		</data>
	</ComparisonMicroChart>

	<m:Label text="This sample chart always appears in normal view, regardless of the chart's actual width." class="sapUiTinyMargin"/>
	<ComparisonMicroChart scale="M" class="sapUiSmallMargin" press="press">
		<data>
			<ComparisonMicroChartData title="Americas" value="10" color="Critical"/>
			<ComparisonMicroChartData title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData title="APAC" value="-20" color="Error"/>
		</data>
	</ComparisonMicroChart>
	<ComparisonMicroChart scale="M" class="sapUiSmallMargin" press="press" shrinkable="true" view="Normal">
		<data>
			<ComparisonMicroChartData title="Americas" value="10" color="Critical"/>
			<ComparisonMicroChartData title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData title="APAC" value="-20"  color="Error"/>
			<ComparisonMicroChartData title="LTA" value="60"  color="Good"/>
			<ComparisonMicroChartData title="ALPS" value="-20" color="Error"/>
			<ComparisonMicroChartData title="Australia" value="55" color="Good"/>
		</data>
	</ComparisonMicroChart>

	<m:Label text="This sample chart has normal view when its width is up to 192px. If the chart's width is increased to 193px or more, its view changes to wide view." class="sapUiTinyMargin"/>
	<ComparisonMicroChart scale="M" class="sapUiSmallMargin" press="press" view="Responsive" width="192px">
		<data>
			<ComparisonMicroChartData title="Americas" value="10" color="Critical"/>
			<ComparisonMicroChartData title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData title="APAC" value="-20" color="Error"/>
		</data>
	</ComparisonMicroChart>
	<ComparisonMicroChart scale="M" class="sapUiSmallMargin" press="press" shrinkable="true" view="Responsive" width="193px">
		<data>
			<ComparisonMicroChartData title="Americas" value="10" color="Critical"/>
			<ComparisonMicroChartData title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData title="APAC" value="-20"  color="Error"/>
			<ComparisonMicroChartData title="LTA" value="60"  color="Good"/>
			<ComparisonMicroChartData title="ALPS" value="-20" color="Error"/>
			<ComparisonMicroChartData title="Australia" value="55" color="Good"/>
		</data>
	</ComparisonMicroChart>
</mvc:View>
