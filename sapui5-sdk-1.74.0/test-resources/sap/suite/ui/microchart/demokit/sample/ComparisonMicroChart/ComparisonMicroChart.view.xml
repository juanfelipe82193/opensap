<mvc:View
	controllerName="sap.suite.ui.microchart.sample.ComparisonMicroChart.ComparisonMicroChart"
	xmlns="sap.suite.ui.microchart"
	xmlns:mvc="sap.ui.core.mvc">
	<ComparisonMicroChart size="S" scale="M" class="sapUiSmallMargin" press="press">
		<data>
			<ComparisonMicroChartData	title="EMEA" displayValue="USD 0" color="Good" />
			<ComparisonMicroChartData	title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData	title="APAC" value="-20" color="Error"/>
		</data>
	</ComparisonMicroChart>
	<ComparisonMicroChart size="M" scale="M" class="sapUiSmallMargin" press="press">
		<data>
			<ComparisonMicroChartData	title="Americas" value="10" color="Good"/>
			<ComparisonMicroChartData	title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData	title="APAC" value="-20" color="Error"/>
		</data>
	</ComparisonMicroChart>
	<ComparisonMicroChart size="L" scale="M" class="sapUiSmallMargin" press="press">
		<data>
			<ComparisonMicroChartData	title="Americas" value="10" color="Good"/>
			<ComparisonMicroChartData	title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData	title="APAC" value="-20" color="Error"/>
		</data>
	</ComparisonMicroChart>
	<ComparisonMicroChart size="M" scale="M" class="sapUiSmallMargin" press="press" width="16rem" shrinkable="true">
		<data>
			<ComparisonMicroChartData	title="Americas" value="10" color="Neutral"/>
			<ComparisonMicroChartData	title="EMEA" value="50" color="Good"/>
			<ComparisonMicroChartData	title="APAC" value="-20" color="Error"/>
			<ComparisonMicroChartData	title="LTA" value="60" color="Good"/>
			<ComparisonMicroChartData	title="ALPS" value="-20" color="Critical"/>
			<ComparisonMicroChartData	title="Australia" value="55" color="Good"/>
		</data>
	</ComparisonMicroChart>
	<ComparisonMicroChart size="S" scale="M" class="sapUiSmallMargin" press="press" height="2rem">
	</ComparisonMicroChart>
	<ComparisonMicroChart size="M" scale="M" class="sapUiSmallMargin" press="press" width="16rem">
	</ComparisonMicroChart>
</mvc:View>
