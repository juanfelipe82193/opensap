<mvc:View
	controllerName="sap.suite.ui.microchart.sample.AreaMicroChartLinesCp.AreaMicroChartLinesCp"
	xmlns="sap.suite.ui.microchart"
	xmlns:mvc="sap.ui.core.mvc">
	<AreaMicroChart
			width="376px"
			height="74px"
			colorPalette="sapUiChartPaletteQualitativeHue1, sapUiChartPaletteQualitativeHue2, sapUiChartPaletteQualitativeHue3, sapUiChartPaletteQualitativeHue4"
			class="sapUiSmallMargin"
			press="press">
		<lines>
			<AreaMicroChartItem>
				<points>
					<AreaMicroChartPoint x="0" y="0" />
					<AreaMicroChartPoint x="30" y="20" />
					<AreaMicroChartPoint x="60" y="20" />
					<AreaMicroChartPoint x="100" y="80" />
				</points>
			</AreaMicroChartItem>
			<AreaMicroChartItem>
				<points>
					<AreaMicroChartPoint x="0" y="0" />
					<AreaMicroChartPoint x="30" y="30" />
					<AreaMicroChartPoint x="60" y="40" />
					<AreaMicroChartPoint x="100" y="90" />
				</points>
			</AreaMicroChartItem>
			<AreaMicroChartItem>
				<points>
				 	<AreaMicroChartPoint x="0" y="0" />
					<AreaMicroChartPoint x="30" y="40" />
					<AreaMicroChartPoint x="60" y="50" />
					<AreaMicroChartPoint x="100" y="100" />
				</points>
			</AreaMicroChartItem>
			<AreaMicroChartItem>
				<points>
					<AreaMicroChartPoint x="0" y="0" />
					<AreaMicroChartPoint x="30" y="20" />
					<AreaMicroChartPoint x="60" y="30" />
					<AreaMicroChartPoint x="100" y="70" />
				</points>
			</AreaMicroChartItem>
		</lines>
	</AreaMicroChart>
</mvc:View>
