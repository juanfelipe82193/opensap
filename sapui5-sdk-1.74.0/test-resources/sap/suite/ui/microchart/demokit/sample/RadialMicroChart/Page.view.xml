<mvc:View
	controllerName="sap.suite.ui.microchart.sample.RadialMicroChart.Page"
	xmlns="sap.suite.ui.microchart"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	<l:VerticalLayout>
		<l:HorizontalLayout>
			<RadialMicroChart size="M" percentage="45" press="press" class="sapUiSmallMargin"></RadialMicroChart>
			<RadialMicroChart size="S" percentage="45" press="press" class="sapUiSmallMargin"></RadialMicroChart>
		</l:HorizontalLayout>
		<l:HorizontalLayout>
			<RadialMicroChart size="M" percentage="99.9" valueColor="Good" press="press" class="sapUiSmallMargin"></RadialMicroChart>
			<RadialMicroChart size="S" percentage="99.9" valueColor="Good" press="press" class="sapUiSmallMargin"></RadialMicroChart>
		</l:HorizontalLayout>
		<l:HorizontalLayout>
			<RadialMicroChart size="M" percentage="0" valueColor="Error" press="press" class="sapUiSmallMargin"></RadialMicroChart>
			<RadialMicroChart size="S" percentage="0" valueColor="Error" press="press" class="sapUiSmallMargin"></RadialMicroChart>
		</l:HorizontalLayout>
		<l:HorizontalLayout>
			<RadialMicroChart size="M" percentage="0.1" valueColor="Critical" press="press" class="sapUiSmallMargin"></RadialMicroChart>
			<RadialMicroChart size="S" percentage="0.1" valueColor="Critical" press="press" class="sapUiSmallMargin"></RadialMicroChart>
		</l:HorizontalLayout>
		<l:HorizontalLayout>
			<RadialMicroChart size="M" press="press" class="sapUiSmallMargin"></RadialMicroChart>
			<RadialMicroChart size="S" press="press" class="sapUiSmallMargin"></RadialMicroChart>
		</l:HorizontalLayout>
	</l:VerticalLayout>
</mvc:View>
