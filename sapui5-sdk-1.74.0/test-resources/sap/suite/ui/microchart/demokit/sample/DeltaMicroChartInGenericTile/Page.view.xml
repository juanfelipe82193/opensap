<mvc:View controllerName="sap.suite.ui.microchart.sample.DeltaMicroChartInGenericTile.Page"
	xmlns="sap.suite.ui.microchart" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m">
	<m:GenericTile header="Revenue Dynamics"
		frameType="TwoByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Red Delta">
				<m:content>
					<DeltaMicroChart value1="-105" size="Responsive"
						value2="-98" title1="May 2014" title2="Apr 2014" displayValue1="-105 Mio"
						displayValue2="-98 Mio" deltaDisplayValue="7 Mio" color="Error" />
				</m:content>
			</m:TileContent>
			<m:TileContent footer="Yellow Delta">
				<m:content>
					<DeltaMicroChart value1="-7" size="Responsive"
						value2="16" title1="May 2014" title2="Apr 2014" displayValue1="-7 Mio"
						displayValue2="16 Mio" deltaDisplayValue="23 Mio" color="Critical" />
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
	<m:GenericTile press="press" header="Total Income Change"
		subheader="By year" frameType="TwoByOne" state="Loaded">
		<m:tileContent>
			<m:TileContent unit="EUR" footer="Current vs previous"
				frameType="TwoByOne">
				<m:content>
					<DeltaMicroChart value1="35" value2="33" size="Responsive"
						title1="Jan 2015" title2="Jan 2014" displayValue1="35 Mio"
						displayValue2="33 Mio" deltaDisplayValue="2 Mio" color="Good" />
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
	<m:GenericTile header="Revenue Dynamics"
		frameType="OneByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Green Delta">
				<m:content>
					<DeltaMicroChart value1="105" size="Responsive"
						value2="98" title1="May 2014" title2="Apr 2014" displayValue1="105 Mio"
						displayValue2="98 Mio" deltaDisplayValue="7 Mio" color="Good" />
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
	<m:GenericTile header="Total Income Change" subheader="By year"
		frameType="OneByOne" press="press">
		<m:tileContent>
			<m:TileContent footer="Current vs previous" unit="EUR">
				<m:content>
					<DeltaMicroChart value1="35" value2="33" size="Responsive"
						title1="Jan 2015" title2="Jan 2014" displayValue1="35 Mio"
						displayValue2="33 Mio" deltaDisplayValue="2 Mio" color="Good" />
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
</mvc:View>
