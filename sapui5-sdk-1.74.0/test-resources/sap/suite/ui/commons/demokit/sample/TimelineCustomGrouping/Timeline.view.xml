<mvc:View
	controllerName="sap.suite.ui.commons.sample.TimelineCustomGrouping.Timeline"
	xmlns="sap.suite.ui.commons"
	xmlns:mvc="sap.ui.core.mvc"
	height="100%">
	<Timeline
		id="idTimeline"
		enableDoubleSided="true"
		groupBy="HireDate"
		growingThreshold="0"
		content="{/Employees}"
		filterTitle="Job Title"
		sortOldestFirst="true">
		<content>
			<TimelineItem
				id="idTemplateItem"
				dateTime="{HireDate}"
				title="{JobTitle}"
				userNameClickable="true"
				userPicture="{Photo}"
				text="{JobResponsibilities}"
				userName="{Name}"
				filterValue="{JobTitle}"
				icon="{Icon}">
			</TimelineItem>
		</content>
	</Timeline>
</mvc:View>
