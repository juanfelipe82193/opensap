<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns="sap.suite.ui.commons"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="sap.suite.ui.commons.sample.ProcessFlowImageContent.ProcessFlow">
	<m:Panel>
		<m:Toolbar>
			<m:Title text="Process Flow sample - Custom image content" />
			<m:ToolbarSpacer />
			<m:Button text="Zoom In" press="onZoomIn" type="Transparent" />
			<m:Button text="Zoom Out" press="onZoomOut" type="Transparent" />
		</m:Toolbar>
		<ProcessFlow
			id="processflow"
			scrollable="false"
			nodePress="onNodePress"
			nodes="{/nodes}"
			lanes="{/lanes}">
			<nodes>
				<ProcessFlowNode
					laneId="{lane}"
					nodeId="{id}"
					children="{children}"
					focused="{focused}">
					<zoomLevelOneContent>
						<m:VBox height="100%" justifyContent="SpaceBetween" renderType="Bare">
							<m:Text text="{title}" />
							<m:Text text="{texts}" />
							<m:Image height="9rem" src="{src}" alt="{title}" densityAware="false" />
						</m:VBox>
					</zoomLevelOneContent>
					<zoomLevelTwoContent>
						<m:VBox height="100%" justifyContent="SpaceBetween" renderType="Bare">
							<m:Text text="{title}" />
							<m:Text text="{texts}" />
							<m:Image height="7rem" src="{src}" alt="{title}" densityAware="false" />
						</m:VBox>
					</zoomLevelTwoContent>
					<zoomLevelThreeContent>
						<m:VBox height="100%" justifyContent="SpaceBetween" renderType="Bare">
							<m:Text text="{title}" />
							<m:Image height="5rem" src="{src}" alt="{title}" densityAware="false" />
						</m:VBox>
					</zoomLevelThreeContent>
					<zoomLevelFourContent>
						<m:Image height="100%" src="{src}" alt="{title}" densityAware="false" />
					</zoomLevelFourContent>
				</ProcessFlowNode>
			</nodes>
			<lanes>
				<ProcessFlowLaneHeader
					laneId="{id}"
					iconSrc="{icon}"
					position="{position}"
					text="{text}" />
			</lanes>
		</ProcessFlow>
	</m:Panel>
</mvc:View>
