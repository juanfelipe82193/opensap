<mvc:View
	controllerName="sap.suite.ui.commons.sample.ChartContainerActionGroups.ChartContainer"
	xmlns="sap.suite.ui.commons"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<layout:Splitter width="100%" height="100%">
		<layout:contentAreas>
			<ChartContainer
				id="chartContainer"
				showFullScreen="true"
				showPersonalization="false"
				autoAdjustHeight="false"
				showSelectionDetails="true">
				<content>
					<ChartContainerContent icon="sap-icon://bubble-chart" title="Bubble Chart">
						<content>
							<viz:VizFrame
								id="chartContainerContentVizFrame"
								height="700px" width="100%"
								uiConfig="{applicationSet:'fiori'}"/>
						</content>
					</ChartContainerContent>
					<ChartContainerContent icon="sap-icon://table-view" title="Table">
						<content>
							<m:Table id="chartContainerContentTable"/>
						</content>
					</ChartContainerContent>
				</content>
			</ChartContainer>
		</layout:contentAreas>
	</layout:Splitter>
</mvc:View>
