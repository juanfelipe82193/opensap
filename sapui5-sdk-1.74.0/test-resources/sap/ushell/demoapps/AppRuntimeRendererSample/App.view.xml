<core:View controllerName="sap.ushell.demo.AppRuntimeRendererSample.App"
	xmlns:core="sap.ui.core" xmlns="sap.m">

	<App>
		<Page title="App Runtime Renderer API Sample">
			<content>
				<Panel>
					<Button id="idSetHeaderTitleBtn" text="Set FLP Header Title" press="onSetHeaderTitle"/>
					<Input id="idTitle" type="Text" value="New Header for FLP Window"/>
				</Panel>
				<Panel>
					<Button id="idHideHeaderTitleBtn" text="Hide FLP Header" press="onHideHeader"/>
					<Button id="idShowHeaderTitleBtn" text="Show FLP Header" press="onShowHeader"/>
				</Panel>
				<Panel>
					<Button id="idCreateHeaderBtn" text="Create Header Item" press="onCreateBtn"/>
					<Button id="idRemoveHeaderBtn" text="Hide Header Item" press="onRemoveBtn"/>
					<Button id="idShowHeaderBtn" text="Show Header Item" press="onShowBtn"/>
				</Panel>
				<Panel>
					<Button id="idCreateEndHeaderBtn" text="Create Header End Item" press="onCreateEndBtn"/>
					<Button id="idRemoveEndHeaderBtn" text="Hide Header End Item" press="onRemoveEndBtn"/>
					<Button id="idShowEndHeaderBtn" text="Show Header End Item" press="onShowEndBtn"/>
				</Panel>
				<Panel>
					<Input id="idNumber1" type="Text" value="10"/>
					<Text text="+"/>
					<Input id="idNumber2" type="Text" value="20"/>
					<Text text="="/>
					<Input id="idResult" type="Text"/>
				</Panel>
			</content>
		</Page>
	</App>
</core:View>