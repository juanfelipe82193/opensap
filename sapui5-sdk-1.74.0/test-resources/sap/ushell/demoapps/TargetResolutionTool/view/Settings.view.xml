<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sap.ushell.demo.TargetResolutionTool.view.Settings"
	xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">

    <l:VerticalLayout
            class="sapUiContentPadding"
            width="100%">

            <l:content>
                <Label text="Inbounds used during resolution" />
                <Button
                    id="btnLoadCurrentConfiguration"
                    enabled="true"
                    text="Load current configuration"
                    press="onBtnLoadCurrentInboundsPress" />

                <TextArea id="textIntent" rows="20" width="100%" value="{/inboundConfiguration}" editable="true" />

            </l:content>
        </l:VerticalLayout>
</core:View>
