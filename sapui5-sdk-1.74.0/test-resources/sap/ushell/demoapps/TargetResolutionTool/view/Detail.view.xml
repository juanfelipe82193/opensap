<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
	xmlns="sap.m" 
    controllerName="sap.ushell.demo.TargetResolutionTool.view.Detail">

	<l:VerticalLayout width="100%">
		<l:content>
            <Panel>
                <FlexBox
                    height="auto"
                    alignItems="Center"
                    justifyContent="Center">

                    <items>
                        <VBox>
                            <core:Icon
                                src="sap-icon://stethoscope"
                                size="8em"
                                color="#333"
                                />
                            <Title level="H1" text="Welcome to Target Resolution Tool" />
                            <Label text="Please select a tool from the left menu to get started" />
                        </VBox>
                    </items>
                </FlexBox>
            </Panel>
		</l:content>
	</l:VerticalLayout>
</mvc:View>
