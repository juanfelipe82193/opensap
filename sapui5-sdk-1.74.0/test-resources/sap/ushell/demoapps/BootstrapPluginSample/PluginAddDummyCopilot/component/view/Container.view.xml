<mvc:View
        xmlns:html="http://www.w3.org/1999/xhtml"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="sap.ushell.demo.PluginAddDummyCopilot.component.controller.PluginAddDummyCopilot"
        xmlns="sap.m"
        height="100%"
        width="100%"
        class="copilotContainer">
    <Toolbar
            id="toolbarHeaderArea"
            class="copilotHeaderNoPadding copilotHeaderNoBorder copilotHeaderRoundCorners copilotDragableHandle copilotAssistantHeaderBackground copilotHeader"
            design="Solid"
            width="100%">
        <HBox class="copilotHeaderEndContainer"
              width="100%"
              justifyContent="End">
            <Button
                    id="copilotCloseBtn"
                    class="sapUshellCopilotCloseBtn"
                    icon="sap-icon://decline"
                    press="onClose"
                    type="Transparent">
            </Button>
        </HBox>
    </Toolbar>

    <Page showHeader="false">
        <content>
            <VBox height="100%"
                  alignItems="Center"
                  justifyContent="Center">
                <Text text="I AM THE COPILOT."/>
                <Text text="I CAN BE DRAGGED AND DOCKED TO THE LEFT OR RIGHT."/>
            </VBox>
        </content>

    </Page>
</mvc:View>
