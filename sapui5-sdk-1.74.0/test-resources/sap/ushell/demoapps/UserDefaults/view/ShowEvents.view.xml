<core:View 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:uicore="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:layout="sap.ui.layout"
    controllerName="sap.ushell.demo.UserDefaults.view.ShowEvents">
	 <Page title="Show User Defaults Parameters Store Events">
        <content>
            <layout:VerticalLayout>
                <layout:VerticalLayout>
                  <MessageStrip
                    class="description"
                    text="This shows the event count and last event of the UserDefaultService"
                    type="Information"
                    showIcon="true">
                  </MessageStrip>
                </layout:VerticalLayout>
                <Text text="{storeEvent>/count}"></Text>
                <Text text="{storeEvent>/lastEvent}"></Text>
            </layout:VerticalLayout>
        </content>
    </Page>
</core:View>