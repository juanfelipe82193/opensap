<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" controllerName="sap.ushell.demo.UserDefaults.view.List"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Page>
        <content>
            <List 
                includeItemInSelection="false"
                mode="SingleSelectMaster"
                selectionChange="onViewSelectionChange" >
                <items>
                    <StandardListItem
                      id="editor"
                      title="Simple Editor"
                      description="Edit available user default values"/>
                    <StandardListItem
                      id="usedParams"
                      title="Used Default Parameters"
                      description="Shows defaults used in Target Mappings"/>
                    <StandardListItem
                      id="showEvents"
                      title="Show User Default Store Events"
                      description="Shows events"/>
                </items>
            </List>
        </content>
    </Page>
</core:View>