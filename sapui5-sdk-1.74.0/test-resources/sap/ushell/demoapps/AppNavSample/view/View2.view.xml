<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="sap.ushell.demo.AppNavSample.view.View2"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="View2">
        <content>
            <l:HorizontalLayout>
                <Button text="toView1" press="handleBtn1Press"
                    class="testToView1Btn"></Button>
                <Label width="350px"
                    text="DatePicker long - to test with Islamic Calendar set Date Format 'Islamic Date 1' on FES"
                    tooltip="DatePicker long - to test with Islamic Calendar set Date Format 'Islamic Date 1' on FES"
                    labelFor="DP2"/>
                <DatePicker id="DP2" value="2014-03-26"
                    valueFormat="yyyy-MM-dd" displayFormat="long"
                    class="sapUiSmallMarginBottom" />
                <Button id="btnDP2" text="Display Gregorian date"
                    press="handleBtnDP2Press" />
            </l:HorizontalLayout>
            <l:HorizontalLayout>
                <Label width="350px" text="DatePicker short"
                    labelFor="DP3" />
                <DatePicker id="DP3" displayFormat="short" />
                <Button id="btnDP3" text="Display Gregorian date"
                    press="handleBtnDP3Press" />
            </l:HorizontalLayout>

        </content>
    </Page>
</core:View>