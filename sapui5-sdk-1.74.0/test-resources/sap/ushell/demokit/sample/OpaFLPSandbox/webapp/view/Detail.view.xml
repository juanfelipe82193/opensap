<mvc:View
	controllerName="sap.ushell.sample.OpaFLPSandbox.controller.Detail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic">

	<semantic:DetailPage
		id="page"
		title="Detail">

		<semantic:content>
			<ObjectHeader
				id="objectHeader"
				title="{Name}">
			</ObjectHeader>
			<List
				id="lineItemsList"
				items="{LineItems}"
				noDataText="No list items found"
				class="sapUiResponsiveMargin">
				<items>
					<ObjectListItem
						title="{Name}"
						text="{LineItemID}"/>
				</items>
			</List>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
