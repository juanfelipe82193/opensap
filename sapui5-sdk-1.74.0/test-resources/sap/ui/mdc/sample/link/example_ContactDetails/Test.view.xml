<core:View height="100%" xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns:l="sap.ui.layout"
		   xmlns:mdcLink="sap.ui.mdc.link" controllerName="sap.ui.mdc.sample.link.example_ContactDetails.Test">

	<m:App defaultTransitionName="show">
		<m:ScrollContainer height="100%" width="100%" horizontal="false" vertical="true" focusable="true">
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:content>
					<m:Panel headerText="sap.ui.mdc.link.ContactDetails" expandable="true" expanded="true"
							 width="auto">
						<m:content>
							<mdcLink:ContactDetails>
								<mdcLink:items>
									<mdcLink:ContactDetailsItem
											photo="/testsuite/test-resources/sap/ui/documentation/sdk/images/johnDoe.png"
											formattedName="John Doe" role="Research &amp; Development" title="Developer"
											org="New Economy">
										<mdcLink:emails>
											<mdcLink:ContactDetailsEmailItem uri="john.doe@work.com" types="work"/>
											<mdcLink:ContactDetailsEmailItem uri="john.doe@home_preferred.com"
																		  types="home,preferred"/>
										</mdcLink:emails>
										<mdcLink:phones>
											<mdcLink:ContactDetailsPhoneItem uri="+001610134869-9" types="fax"/>
											<mdcLink:ContactDetailsPhoneItem uri="+0049175123456" types="cell"/>
											<mdcLink:ContactDetailsPhoneItem uri="+001610134869-0" types="work"/>
										</mdcLink:phones>
										<mdcLink:addresses>
											<mdcLink:ContactDetailsAddressItem street="800 E 3rd St."
																			code="90013"
																			locality="Los Angeles"
																			region="CA"
																			country="USA"
																			types="work"/>
										</mdcLink:addresses>
									</mdcLink:ContactDetailsItem>
								</mdcLink:items>
							</mdcLink:ContactDetails>
						</m:content>
					</m:Panel>
				</l:content>
			</l:VerticalLayout>
		</m:ScrollContainer>
	</m:App>
</core:View>
