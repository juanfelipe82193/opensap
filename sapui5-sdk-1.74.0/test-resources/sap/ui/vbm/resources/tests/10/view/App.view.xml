<mvc:View class="test-view" controllerName="vbm-regression.tests.10.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="40%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check whether we can zoom to an area on the map. The zoom action is performed using two geo positions passed as arguments."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="1. Click the ZOOM button and observe it takes you to a place with 3 spots."></Text>
						<Button text="ZOOM" width="100%" press="onPressZoom"></Button>
						<Image src="img/multispots.jpg" height="100%" width="100%"></Image>
					</l:VerticalLayout>
				</content>

			</Panel>

			<vbm:VBI id="vbi" height="100%" width="100%" class="position-absolute">
				<vbm:layoutData>
					<FlexItemData baseSize="60%"></FlexItemData>
				</vbm:layoutData>
			</vbm:VBI>

		</items>
	</FlexBox>



</mvc:View>
