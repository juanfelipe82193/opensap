<mvc:View class="test-view" controllerName="vbm-regression.tests.02.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%"  class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="50%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To see if we can load multiple instances of Visual Business controls on one page."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="1. Check that there are 2 instances of the GeoMap control loaded."></Text>
						<Text text="2. Check that the first map has routes."></Text>
						<Text text="3. Check that the second map has circles."></Text>
						<Image height="35%" width="35%" src="img/sapapi_4instances.jpg"></Image>
						<Image height="35%" width="35%" src="img/sapapi_4instances2.jpg"></Image>
					</l:VerticalLayout>
				</content>

			</Panel>

			<FlexBox direction="Column" width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="50%"></FlexItemData>
				</layoutData>


				<items>
					
					<vbm:VBI id="vbi1" height="100%" width="100%" class="position-absolute">
						<vbm:layoutData>
							<FlexItemData baseSize="50%"></FlexItemData>
						</vbm:layoutData>
					</vbm:VBI>
					
					<vbm:VBI id="vbi2" height="100%" width="100%" class="position-absolute">
						<vbm:layoutData>
							<FlexItemData baseSize="50%"></FlexItemData>
						</vbm:layoutData>
					</vbm:VBI>
					
				</items>

			</FlexBox>


		</items>
	</FlexBox>



</mvc:View>
