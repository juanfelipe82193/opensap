<mvc:View class="test-view" controllerName="vbm-regression.tests.15.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="50%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that routes with borders display correctly."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="1. Check that the red route has a green border."></Text>
						<Text text="2. Check that the blue route has a red border."></Text>
					</l:VerticalLayout>
				</content>

			</Panel>

			<vbm:VBI id="vbi" height="100%" width="100%" class="position-absolute">
				<vbm:layoutData>
					<FlexItemData baseSize="50%"></FlexItemData>
				</vbm:layoutData>
			</vbm:VBI>

		</items>
	</FlexBox>



</mvc:View>
