<mvc:View class="test-view" controllerName="vbm-regression.tests.61.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">

	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="35%"></FlexItemData>
				</layoutData>
				<content>

					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that Germany, France and Spain are displaying some values as labels."></Text>
					</l:VerticalLayout>

				</content>
			</Panel>


			<vbm:AnalyticMap initialPosition="5;45;0" initialZoom="5" id="map" width="100%" height="100%" regions="{/regionProperties}" class="position-absolute">
				
				<vbm:layoutData>
					<FlexItemData baseSize="70%"></FlexItemData>
				</vbm:layoutData>
				
				<vbm:regions>
					<vbm:Region code="{code}" color="{color}" tooltip="{tooltip}" select="{select}" labelText="{kpi}" labelType="{semanticType}"></vbm:Region>
				</vbm:regions>
				
			</vbm:AnalyticMap>

		</items>
	</FlexBox>

</mvc:View>
