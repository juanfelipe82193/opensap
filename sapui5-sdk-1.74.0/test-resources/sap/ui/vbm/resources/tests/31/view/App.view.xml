<mvc:View class="test-view" controllerName="vbm-regression.tests.31.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="40%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To test labels on Spots with different label design capabilities."></Text>
						<Label class="voffset-25" text="Map 1 to test:" design="Bold"></Label>
						<Text text="1. Check that a map loads with multiple spots."></Text>
						<Text text="2. Check that the spots have text labels."></Text>
						<Text text="3. Check the position of the labels next to the spots. Top/Bottom/Left/Right aligned labels have an arrow."></Text>
						<Text text="4. Check the position of the labels next to the spots. Check that some label text don't have arrows."></Text>
						
						<Label class="voffset-25" text="Map 2 to test:" design="Bold"></Label>
						<Text text="Observe the text labels design is different than map 1. In the rounded design arrows are only supported for Top or Bottom aligned labels."></Text>
					</l:VerticalLayout>
				</content>

			</Panel>

			<FlexBox direction="Column" width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="60%"></FlexItemData>
				</layoutData>


				<items>
					<vbm:VBI id="vbi1" height="100%" width="100%" class="position-absolute">
						<vbm:layoutData>
							<FlexItemData baseSize="50%"></FlexItemData>
						</vbm:layoutData>
					</vbm:VBI>

					<vbm:VBI id="vbi2" height="100%" width="100%" class="position-absolute">
						<vbm:layoutData>
							<FlexItemData baseSize="50%"></FlexItemData>
						</vbm:layoutData>
					</vbm:VBI>
				</items>

			</FlexBox>


		</items>
	</FlexBox>



</mvc:View>
