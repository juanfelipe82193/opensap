<mvc:View class="test-view" xmlns:chart="sap.suite.ui.microchart" controllerName="vbm-regression.tests.47.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="30%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To test the different clustering capabilities using the OLD and DEPRECATED API."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text class="voffset-10" text='1. Click the buttons one by one and make sure the clustering works.'></Text>
						<Button width="100%" text="Grid Clustering" press="onPressGrid"></Button>
						<Button width="100%" text="Distance Clustering" press="onPressDistance"></Button>
						<Button width="100%" text="Tree Clustering" press="onPressTree"></Button>
					</l:VerticalLayout>
					
				</content>
			</Panel>

			<Panel id="map-panel" height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="70%"></FlexItemData>
				</layoutData>
				<content>
					
				</content>
			</Panel>


		</items>
	</FlexBox>


</mvc:View>
