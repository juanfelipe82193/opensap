<mvc:View class="test-view" xmlns:chart="sap.suite.ui.microchart" controllerName="vbm-regression.tests.56.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="40%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To test Visual Business GeoMap Control with typed Spots."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text class="voffset-10" text='1. Check that the GeoMap control loads with Spots.'></Text>
						<Text class="voffset-10" text='2. Check that you can see the different spot types (Success, Warning, Error, information and Default)'></Text>
					</l:VerticalLayout>
				</content>
			</Panel>

			<vbm:GeoMap id="vbi" height="100%" width="100%" mapConfiguration="{/map/mapConfiguration}" class="position-absolute">
				<vbm:layoutData>
					<FlexItemData baseSize="60%"></FlexItemData>
				</vbm:layoutData>
				<vbm:vos>
					<vbm:Spots id="my-spots"></vbm:Spots>
				</vbm:vos>
			</vbm:GeoMap>

		</items>
	</FlexBox>


</mvc:View>
