<mvc:View class="test-view" controllerName="vbm-regression.tests.04.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">

	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="35%"></FlexItemData>
				</layoutData>
				<content>

					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that VB controls obey language rules"></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="1. Click the buttons below to verify that the test loads in Right to Left mode for Arabic and Hebrew"></Text>
						<Text text="2. When in RTL mode, verify that the detail window and context menu on spots opens to the left side"></Text>
						<Text text="3. Check that the spot text, label text, legend items and detail window for spots render unicode characters correctly"></Text>
						<l:HorizontalLayout>
							<Button text="Arabic" press="onPressArabic" class="spacer-10"></Button>
							<Button text="Hindi" press="onPressHindi" class="spacer-10"></Button>
							<Button text="Hebrew" press="onPressHebrew" class="spacer-10"></Button>
						</l:HorizontalLayout>
						<Text class="voffset-10" text="Press the Reload Test App button to get back to default test app"></Text>
					</l:VerticalLayout>

				</content>
			</Panel>
			
			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="65%" />
				</layoutData>
				<content>
					<FlexBox id="flexBox" direction="Column" width="100%" height="100%">
					</FlexBox>
				</content>
			</Panel>

		</items>
	</FlexBox>

</mvc:View>
