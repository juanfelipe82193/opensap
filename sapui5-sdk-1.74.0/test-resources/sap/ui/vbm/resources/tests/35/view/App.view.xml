<mvc:View class="test-view" controllerName="vbm-regression.tests.35.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="40%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To test design mode capabilities."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text class="red-text" text="Note: This cannot be tested on touch devices"></Text>
						<Text text="1. Drag the symbols and drop them on the map (spot to pie only)"></Text>
						<Text text="2. Click an icon and then click the map to add it (spot to pie only)."></Text>
						<Text text="3. Drag (not click) the 'Subscribe' icon on the map to activate events. Then add new items to the map and observe you are notified."></Text>
						<Text text="4. Drag (not click) the 'Unsubscribe' icon on the map. Then add new items. You don't notifications anymore."></Text>
						<Label text="Legend: " design="Bold"></Label>
						<Image src="img/choices.jpg" height="100%" width="100%"></Image>
					</l:VerticalLayout>
				</content>

			</Panel>

			<FlexBox direction="Column" width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="60%"></FlexItemData>
				</layoutData>


				<items>
					<Bar id="bar">
						<contentMiddle>
							<Image id="spot" src="media/vbdesign/spot.png"></Image>
							<Image id="area" src="media/vbdesign/area.png"></Image>
							<Image id="geocircle" src="media/vbdesign/geocircle.png"></Image>
							<Image id="circle" src="media/vbdesign/circle.png"></Image>
							<Image id="route" src="media/vbdesign/route.png"></Image>
							<Image id="box" src="media/vbdesign/box.png"></Image>
							<Image id="piechart" src="media/vbdesign/pie.png"></Image>
							<Image id="clear" src="media/vbdesign/clear.png"></Image>
							<Image id="unsubscribeevents" src="media/vbdesign/unsubscribeevents.png"></Image>
							<Image id="subscribeevents" src="media/vbdesign/subscribeevents.png"></Image>
						</contentMiddle>
					</Bar>

					<vbm:VBI id="vbi" height="100%" width="100%" submit="onSubmit" class="position-absolute">
						<vbm:layoutData>
							<FlexItemData baseSize="100%"></FlexItemData>
						</vbm:layoutData>
					</vbm:VBI>

					
				</items>

			</FlexBox>


		</items>
	</FlexBox>



</mvc:View>
