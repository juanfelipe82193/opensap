<mvc:View class="test-view" controllerName="vbm-regression.tests.26.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="40%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To test route detail window capabilities."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="1. Check that the map loads with a Route and labelText."></Text>
						<Text text="2. Check that when you hover over the route it changes colour."></Text>
						<Text text="3. Make sure there is a detail window open and it's poiting to the route."></Text>
						<Text text="4. Perform panning on the map. Observe that as the route leaves the area, the detail window is following the route."></Text>
					</l:VerticalLayout>
				</content>
			</Panel>

			<vbm:VBI id="vbi" height="100%" width="100%" class="position-absolute">
				<vbm:layoutData>
					<FlexItemData baseSize="60%"></FlexItemData>
				</vbm:layoutData>
			</vbm:VBI>

		</items>
	</FlexBox>


</mvc:View>
