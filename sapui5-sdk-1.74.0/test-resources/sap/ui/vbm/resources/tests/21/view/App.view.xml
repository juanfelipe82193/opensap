
<mvc:View class="test-view" controllerName="vbm-regression.tests.21.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="35%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To test spots, blocks, pies and detail window."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text class="voffset-25" text="1. Check that the map has a red block, 2 pie charts and 2 spots."></Text>
						<Text class="voffset-25" text="2. MOUSE ONLY: hover your mouse over the pie charts and the blocks and observe they change color."></Text>
						<Text class="voffset-25" text="3. Click the OPEN DETAIL WINDOW button and check that a detail window opens."></Text>
						<Button text="OPEN DETAIL WINDOW" press="onOpenDetailWindow"></Button>
						<Text class="voffset-25" text="3. Click the CLEAR ALL button and check that all map objects disappear."></Text>
						<Button text="CLEAR ALL" press="onClearEverything"></Button>
					</l:VerticalLayout>
				</content>
			</Panel>

			<vbm:VBI id="vbi" height="100%" width="100%" class="position-absolute">
				<vbm:layoutData>
					<FlexItemData baseSize="65%"></FlexItemData>
				</vbm:layoutData>
			</vbm:VBI>

		</items>
	</FlexBox>


</mvc:View>
