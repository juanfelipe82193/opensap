<mvc:View class="test-view" xmlns:chart="sap.suite.ui.microchart" controllerName="vbm-regression.tests.48.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="30%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To test various kinds of clustering with options to enable and disable clustering."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text class="voffset-10" text='1. Click the buttons one by one and make sure the clustering works.'></Text>
						<Button width="100%" text="Grid Clustering - Container" press="onPressGridContainer"></Button>
						<Button width="100%" text="Distance Clustering - Container" press="onPressDistanceContainer"></Button>
						<Button width="100%" text="Tree Clustering - Container" press="onPressTreeContainer"></Button>
						<Button width="100%" text="Grid Clustering - Spot" press="onPressGridSpot"></Button>
						<Button width="100%" text="Distance Clustering - Spot" press="onPressDistanceSpot"></Button>
						<Button width="100%" text="Tree Clustering - Spot" press="onPressTreeSpot"></Button>
						<Button width="100%" text="Destroy Clusters" press="onDestroyClusters"></Button>
					</l:VerticalLayout>
					
				</content>
			</Panel>

			<Panel id="map-panel" height="100%" class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="70%"></FlexItemData>
				</layoutData>
				<content>
					
				</content>
			</Panel>


		</items>
	</FlexBox>


</mvc:View>
