<mvc:View class="test-view" controllerName="vbm-regression.tests.06.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Column" width="100%" height="100%">
		<items>

			<Panel height="100%" headerText="The aim: " class="position-absolute">
				<layoutData>
					<FlexItemData baseSize="20%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Text text="To check that the different layouts for the Copyright label display correctly."></Text>
					</l:VerticalLayout>

				</content>
			</Panel>



			<FlexBox direction="Row" width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="40%"></FlexItemData>
				</layoutData>
				<items>

					<Panel height="100%" headerText="Text only: " class="position-absolute">
						<layoutData>
							<FlexItemData baseSize="50%"></FlexItemData>
						</layoutData>
						<content>
							<l:VerticalLayout width="100%">
								<Image src="img/sapapi_copyright1.jpg" width="100%"></Image>
								<vbm:VBI id="vbi1" height="80px" width="100%">
								</vbm:VBI>
							</l:VerticalLayout>
						</content>
					</Panel>

					<Panel height="100%" headerText="Link + image: " class="position-absolute">
						<layoutData>
							<FlexItemData baseSize="50%"></FlexItemData>
						</layoutData>
						<content>
							<l:VerticalLayout width="100%">
								<Image src="img/sapapi_copyright2.jpg" width="100%"></Image>
								<vbm:VBI id="vbi2" height="80px" width="100%">
								</vbm:VBI>
							</l:VerticalLayout>
						</content>
					</Panel>

				</items>
			</FlexBox>

			<FlexBox direction="Row" width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="40%"></FlexItemData>
				</layoutData>
				<items>
					<Panel height="100%" headerText="Image: " class="position-absolute">
						<layoutData>
							<FlexItemData baseSize="50%"></FlexItemData>
						</layoutData>
						<content>
							<l:VerticalLayout width="100%">
								<Image src="img/sapapi_copyright3.jpg" width="100%"></Image>
								<vbm:VBI id="vbi3" height="80px" width="100%">
								</vbm:VBI>
							</l:VerticalLayout>
						</content>
					</Panel>

					<Panel height="100%" headerText="2 Layer Link + Image: " class="position-absolute">
						<layoutData>
							<FlexItemData baseSize="50%"></FlexItemData>
						</layoutData>
						<content>
							<l:VerticalLayout width="100%">
								<Image src="img/sapapi_copyright4.jpg" width="100%"></Image>
								<vbm:VBI id="vbi4" height="80px" width="100%">
								</vbm:VBI>
							</l:VerticalLayout>
						</content>
					</Panel>
				</items>
			</FlexBox>

		</items>
	</FlexBox>


</mvc:View>
