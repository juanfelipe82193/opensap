<mvc:View class="test-view" controllerName="vbm-regression.tests.01.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">


	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<FlexBox direction="Column" width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="50%"></FlexItemData>
				</layoutData>
				<items>

					<l:VerticalLayout width="100%">
						<l:layoutData>
							<FlexItemData baseSize="25%"></FlexItemData>
						</l:layoutData>
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that the GeoMap control loads spots successfully. This sample shows a GeoMap control with spots in JSON format."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="Check that a GeoMap control loads on the right hand side, and check that it looks like the image below."></Text>
					</l:VerticalLayout>

					<Image height="50%" width="50%" src="img/sapapi_load_01.jpg">
						<layoutData>
							<FlexItemData baseSize="75%"></FlexItemData>
						</layoutData>
					</Image>
				</items>
			</FlexBox>


			<vbm:VBI id="vbi" height="100%" width="100%" class="position-absolute">
				<vbm:layoutData>
					<FlexItemData baseSize="50%"></FlexItemData>
				</vbm:layoutData>
			</vbm:VBI>

		</items>
	</FlexBox>


</mvc:View>
