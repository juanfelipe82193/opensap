<mvc:View class="test-view" controllerName="vbm-regression.bcp_tests.04.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">

	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="35%"></FlexItemData>
				</layoutData>
				<content>

					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that the spots are clustered when the page loads"></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="There is a custom attribute used for clustering the spots in this sample. Previously, custom attributes were not handled and clustering failed. Therefore the aim of this test is to check if spots are clustered when you load the sample."></Text>
					</l:VerticalLayout>

				</content>
			</Panel>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="35%" />
				</layoutData>
				<content>
					<FlexBox id="flexBox" direction="Column" width="100%" height="100%">
					</FlexBox>
				</content>
			</Panel>

		</items>
	</FlexBox>

</mvc:View>
