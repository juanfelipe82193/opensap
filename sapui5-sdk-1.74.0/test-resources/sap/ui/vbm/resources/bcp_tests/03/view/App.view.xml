<mvc:View class="test-view" controllerName="vbm-regression.bcp_tests.03.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">

	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="65%"></FlexItemData>
				</layoutData>
				<content>

					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that bind and unbind operations work on spots"></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="1. Press the &quot;Bind Spots&quot; button and verify that two spots appear on the map"></Text>
						<Text class= "voffset-25" text="2. Press the &quot;Unbind Spots&quot; button and verify that the two spots are removed from the map"></Text>
						<Button class="voffset-25" id = "btn" text="Bind Spots" width="25%" press="onBind"></Button>
					</l:VerticalLayout>

				</content>
			</Panel>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="35%" />
				</layoutData>
				<content>
					<FlexBox id="flexBox" direction="Column" width="100%" height="100%">
					</FlexBox>
				</content>
			</Panel>

		</items>
	</FlexBox>

</mvc:View>
