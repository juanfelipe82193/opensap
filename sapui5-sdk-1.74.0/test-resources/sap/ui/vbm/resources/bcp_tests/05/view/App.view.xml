<mvc:View class="test-view" controllerName="vbm-regression.bcp_tests.05.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc">

	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="35%"></FlexItemData>
				</layoutData>
				<content>

					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that map configuration can be changed on the fly"></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text class="voffset-25" text="Note: On initial load, the Geomap control will be empty"></Text>
						<Text class="voffset-25" text="1. Click on the button below multiple times to see the map configuration randomly changing"></Text>
						<Text class="voffset-25" text="Also note that you might see the same map configuration two consecutive times as it is randomly selected"></Text>
						<Button class="voffset-25" id = "btn" text="Change map configuration" press="onChangeMapConfig"></Button>
					</l:VerticalLayout>

				</content>
			</Panel>


			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="65%" />
				</layoutData>
				<content>
					<FlexBox id="flexBox" direction="Column" width="100%" height="100%">
					</FlexBox>
				</content>
			</Panel>

		</items>
	</FlexBox>

</mvc:View>
