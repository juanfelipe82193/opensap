<mvc:View
	class="test-view"
	controllerName="vbm-regression.bcp_tests.02.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:vbm="sap.ui.vbm"
	xmlns:l="sap.ui.layout"
	height="100%"
	displayBlock="true"
>
	<FlexBox direction="Row" width="100%" height="100%">
		<items>
			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="50%"></FlexItemData>
				</layoutData>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that filtering of VOs by type works as expected."></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Button class="voffset-25" text="Show good only" width="25%" press="showGood"></Button>
						<Button class="voffset-25" text="Show bad only" width="25%" press="showBad"></Button>
						<Button class="voffset-25" text="Show all" width="25%" press="showAll"></Button>
						<Button class="voffset-25" text="Show bad only" width="25%" press="showBad"></Button>
						<Button class="voffset-25" text="Show good only" width="25%" press="showGood"></Button>
						<Button class="voffset-25" text="Show all" width="25%" press="showAll"></Button>
						<Button class="voffset-25" text="Show good only" width="25%" press="showGood"></Button>
						<Button class="voffset-25" text="Show all" width="25%" press="showAll"></Button>
						<Button class="voffset-25" text="Show bad only" width="25%" press="showBad"></Button>
						<Button class="voffset-25" text="Show all" width="25%" press="showAll"></Button>
					</l:VerticalLayout>
				</content>
			</Panel>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="50%" />
				</layoutData>
				<content>
					<FlexBox id="flexBox" direction="Column" width="100%" height="100%">
					</FlexBox>
				</content>
			</Panel>
		</items>
	</FlexBox>
</mvc:View>
