<mvc:View class="test-view" controllerName="vbm-regression.bcp_tests.01.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:mvc="sap.ui.core.mvc" xmlns:commons="sap.ui.commons">

	<FlexBox direction="Row" width="100%" height="100%">
		<items>

			<Panel width="100%" height="100%">
				<layoutData>
					<FlexItemData baseSize="35%"></FlexItemData>
				</layoutData>
				<content>

					<l:VerticalLayout width="100%">
						<Label text="The aim: " design="Bold"></Label>
						<Text text="To check that clicking/pressing on numeric controls raises relevant events"></Text>
						<Label class="voffset-25" text="To test:" design="Bold"></Label>
						<Text text="1. Click/tap on the numeric controls and verify that a message toast appears."></Text>
					</l:VerticalLayout>

				</content>
			</Panel>


			<vbm:AnalyticMap initialPosition="0;0;0" initialZoom="2" id="map" width="100%" height="100%" regions="{/oData}" class="position-absolute">
				
				<vbm:layoutData>
					<FlexItemData baseSize="70%"></FlexItemData>
				</vbm:layoutData>
			
				<vbm:regions>
					<vbm:Region pos="{pos}" color="{color}" tooltip="{tooltip}" select="{select}" radius="{radius}" percent="{percent}" valueColor="{valueColor}"></vbm:Region>
				</vbm:regions>
			
			</vbm:AnalyticMap>

		</items>
	</FlexBox>

</mvc:View>
