<mvc:View
	height="100%"
	controllerName="sap.ui.comp.sample.variantmanagement.VariantManagement"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns="sap.ui.comp.variants">
	<l:VerticalLayout>
		<m:Label text="Variants"/>
		<VariantManagement select="onSelect" showCreateTile="false" showShare="false" initialSelectionKey="A">
			<variantItems>
				<VariantItem key="A" text="{i18n>variantA}" readOnly="true" labelReadOnly="true"/>
				<VariantItem key="B" text="{i18n>variantB}" readOnly="true" labelReadOnly="true"/>
			</variantItems>
		</VariantManagement>
	</l:VerticalLayout>
</mvc:View>