<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.ui.comp.smartmicrochart"
		xmlns:m="sap.m"
		controllerName="sap.ui.comp.sample.smartmicrochart.SmartStackedBarMicroChart.Page"
		height="100%">
	<m:Page id="page" title="SmartStackedBarMicroChart">
		<m:Panel headerText="Smart Stacked Bar Micro Chart With Criticality"
				 class="sapUiSmallMarginBottom">
			<SmartStackedBarMicroChart
					id="defaultStacked"
					entitySet="Revenues"
					chartBindingPath="/Revenues"/>
			<m:Label
					text="Unit of Measure association:"
					design="Bold"
					class="sapUiSmallMarginTop"/>
			<m:Label id="unitOfMeasure"/>
		</m:Panel>
		<m:Panel
				headerText="Smart Stacked Bar Micro Chart With Display Values"
				class="sapUiSmallMarginBottom">
			<SmartStackedBarMicroChart
					id="displayValuesStacked"
					entitySet="Series"
					chartBindingPath="/Series"/>
			<m:Label
					text="Title association:"
					design="Bold"
					class="sapUiSmallMarginTop"/>
			<m:Label id="chartTitle"/>
		</m:Panel>
	</m:Page>
</mvc:View>
