<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.ui.comp.smartmicrochart"
	xmlns:m="sap.m"
	controllerName="sap.ui.comp.sample.smartmicrochart.SmartMicroChart.exampleBase.Page"
	xmlns:html="http://www.w3.org/1999/xhtml"
	height="100%">
	<html:style>
		.SMC_SRMC {
			margin: 0px 4rem;
			width: 8rem;
			height: 8rem;
		}
	</html:style>
	<m:Page id="page" title="SmartMicroChart">
		<m:VBox>
			<m:HBox class="sapUiContentPadding">
				<m:FlexBox width="16rem" height="8rem" alignItems="Center" justifyContent="SpaceBetween" renderType="Bare">
					<SmartMicroChart id="smartChartBullet" entitySet="Products" enableAutoBinding="true" chartBindingPath="/Products('PC')" isResponsive="true">
						<customData>
							<core:CustomData key="chartQualifier" value="BulletChartQualifier" />
						</customData>
					</SmartMicroChart>
				</m:FlexBox>
				<m:VBox class="sapUiSmallMarginBegin">
					<m:Label text="SmartMicroChart in case of 'ChartType/Bullet'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelBullet" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelBullet" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="unitLabelBullet" />
				</m:VBox>
			</m:HBox>
			<m:HBox class="sapUiContentPadding">
				<m:FlexBox width="16rem" height="8rem" alignItems="Center" justifyContent="SpaceBetween" renderType="Bare">
					<SmartMicroChart id="smartChartArea" entitySet="Series" isResponsive="true" />
				</m:FlexBox>
				<m:VBox class="sapUiSmallMarginBegin">
					<m:Label text="SmartMicroChart in case of 'ChartType/Area'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelArea" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelArea" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="unitLabelArea" />
				</m:VBox>
			</m:HBox>
			<m:HBox class="sapUiContentPadding">
				<m:FlexBox width="16rem" height="8rem" alignItems="Center" justifyContent="SpaceBetween" renderType="Bare">
					<SmartMicroChart id="smartChartLine" entitySet="StockPrices" isResponsive="true" />
				</m:FlexBox>
				<m:VBox class="sapUiSmallMarginBegin">
					<m:Label text="SmartMicroChart in case of 'ChartType/Line'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelLine" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelLine" />
				</m:VBox>
			</m:HBox>
			<m:HBox class="sapUiContentPadding">
				<SmartMicroChart id="smartChartDonut" entitySet="Sales" isResponsive="true" enableAutoBinding="true" chartBindingPath="/Sales('Keyboard')" class="SMC_SRMC">
					<customData>
						<core:CustomData key="chartQualifier" value="DonutChartQualifier" />
					</customData>
				</SmartMicroChart>
				<m:VBox class="sapUiSmallMarginBegin">
					<m:Label text="SmartMicroChart in case of 'ChartType/Donut'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelDonut" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelDonut" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="unitLabelDonut" />
					<m:Label text="Free Text association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="freeTextLabelDonut" />
				</m:VBox>
			</m:HBox>

			<m:HBox class="sapUiContentPadding">
				<m:FlexBox width="16rem" height="8rem" alignItems="Center" justifyContent="SpaceBetween" renderType="Bare">
					<SmartMicroChart id="smartChartPie" entitySet="Products" enableAutoBinding="true" chartBindingPath="/Products('PC')" isResponsive="true">
						<customData>
							<core:CustomData key="chartQualifier" value="PieChartQualifier" />
						</customData>
					</SmartMicroChart>
				</m:FlexBox>
				<m:VBox class="sapUiSmallMarginBegin">
					<m:Label text="SmartMicroChart in case of 'ChartType/Pie'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelPie" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelPie" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="unitLabelPie" />
				</m:VBox>
			</m:HBox>

			<m:HBox class="sapUiContentPadding">
				<m:FlexBox width="16rem" height="8rem" alignItems="Center" justifyContent="SpaceBetween" renderType="Bare">
					<SmartMicroChart id="smartChartStackedBar" entitySet="Revenues" isResponsive="true" />
				</m:FlexBox>
				<m:VBox class="sapUiSmallMarginBegin">
					<m:Label text="SmartMicroChart in case of 'ChartType/BarStacked'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelBarStacked" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelBarStacked" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="unitLabelBarStacked" />
				</m:VBox>
			</m:HBox>

			<m:HBox class="sapUiContentPadding">
				<m:FlexBox width="16rem" height="8rem" alignItems="Center" justifyContent="SpaceBetween" renderType="Bare">
					<SmartMicroChart id="smartChartColumn" entitySet="StockPrices" isResponsive="true" />
				</m:FlexBox>
				<m:VBox class="sapUiSmallMarginBegin">
					<m:Label text="SmartMicroChart in case of 'ChartType/Column'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelColumn" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelColumn" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="unitLabelColumn" />
				</m:VBox>
			</m:HBox>
		</m:VBox>
	</m:Page>
</mvc:View>
