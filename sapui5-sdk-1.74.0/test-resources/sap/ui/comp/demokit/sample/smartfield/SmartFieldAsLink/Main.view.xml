<mvc:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:smartField="sap.ui.comp.smartfield" 
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
	xmlns:l="sap.ui.layout" 
	xmlns:form="sap.ui.comp.smartform" 
	xmlns:m="sap.m" height="100%" controllerName="sap.ui.comp.sample.smartfield.SmartFieldAsLink.Main">
	<m:ScrollContainer id="SC1" height="100%" horizontal="false" vertical="true">
		<form:SmartForm id="SF1" class="editableForm" editTogglable="true" editable="true" title="{Name}">
			<form:Group id="G1" label="SmartField as Link">
				<!-- ************************************** -->
				<!-- Name									-->
				<!-- ************************************** -->

				<form:GroupElement id="GE-Name">
					<smartField:SmartField id="idName" value="{Name}" url="http://www.sap.com"/>
				</form:GroupElement>

				<!-- **************************************	-->
				<!-- E-mail									-->
				<!-- **************************************	-->

				<form:GroupElement id="GE-Email">
					<smartField:SmartField id="idEmail" value="{Email}"/>
				</form:GroupElement>

				<!-- ************************************** -->
				<!-- Phone									-->
				<!-- ************************************** -->

				<form:GroupElement id="GE-Phone">
					<smartField:SmartField id="idPhone" value="{Phone}"/>
				</form:GroupElement>

				<!-- ************************************** -->
				<!-- URL 									-->
				<!-- ************************************** -->

				<form:GroupElement id="GE-URL">
					<smartField:SmartField id="idURL" value="{URL}"/>
				</form:GroupElement>
			</form:Group>
		</form:SmartForm>
	</m:ScrollContainer>
</mvc:View>
