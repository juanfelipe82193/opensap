<mvc:View
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:grid="sap.ui.layout.cssgrid"
		xmlns:f="sap.f"
		xmlns:cards="sap.f.cards"
		controllerName="sap.ui.layout.sample.GridResponsiveColumnLayout.GridResponsiveColumnLayout">
	<Slider class="sapUiSmallMarginBottom" value="100" liveChange="onSliderMoved"/>
	<Panel id="panelCSSGrid">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="Grid with ResponsiveColumnLayout"/>
			</Toolbar>
		</headerToolbar>
		<content>
			<Text class="sapUiSmallMarginBottom" text="ResponsiveColumnLayout represents a layout which is configured to display a variable number of columns depending on available screen size."/>
			<Text class="sapUiSmallMarginBottom" text="Grid row's height is dynamically determined by the height of the highest grid element on this row." />
			<grid:CSSGrid id="grid1">
				<grid:customLayout>
					<grid:ResponsiveColumnLayout>
					</grid:ResponsiveColumnLayout>
				</grid:customLayout>
				<grid:items>
					<f:Card>
						<f:layoutData>
							<grid:ResponsiveColumnItemLayoutData columns="4" rows="4" />
						</f:layoutData>
						<f:content>
							<VBox class="sapUiSmallMargin">
								<Title text="4 / 4" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
							</VBox>
						</f:content>
					</f:Card>

					<f:Card>
						<f:layoutData>
							<grid:ResponsiveColumnItemLayoutData columns="3" rows="3" />
						</f:layoutData>
						<f:content>
							<VBox class="sapUiSmallMargin">
								<Title text="3 / 3" wrapping="true" />
								<Label text="Subtitle Subtitle Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
							</VBox>
						</f:content>
					</f:Card>

					<f:Card>
						<f:layoutData>
							<grid:ResponsiveColumnItemLayoutData columns="1" rows="1" />
						</f:layoutData>
						<f:content>
							<VBox class="sapUiSmallMargin">
								<Title text="1 / 1" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
							</VBox>
						</f:content>
					</f:Card>

					<f:Card>
						<f:layoutData>
							<grid:ResponsiveColumnItemLayoutData columns="1" rows="1" />
						</f:layoutData>
						<f:content>
							<VBox class="sapUiSmallMargin">
								<Title text="1 / 1" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
							</VBox>
						</f:content>
					</f:Card>

					<f:Card>
						<f:layoutData>
							<grid:ResponsiveColumnItemLayoutData columns="1" rows="1" />
						</f:layoutData>
						<f:content>
							<VBox class="sapUiSmallMargin">
								<Title text="1 / 1" wrapping="true" />
								<Label text="Subtitle " wrapping="true" />
								<Label text="Subtitle " wrapping="true" />
							</VBox>
						</f:content>
					</f:Card>

					<f:Card>
						<f:layoutData>
							<grid:ResponsiveColumnItemLayoutData columns="3" rows="2" />
						</f:layoutData>
						<f:content>
							<VBox class="sapUiSmallMargin">
								<Title text="3 / 2" wrapping="true" />
								<Label text="Subtitle Subtitle Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
							</VBox>
						</f:content>
					</f:Card>

					<f:Card>
						<f:layoutData>
							<grid:ResponsiveColumnItemLayoutData columns="1" rows="1" />
						</f:layoutData>
						<f:content>
							<VBox class="sapUiSmallMargin">
								<Title text="1 / 1" wrapping="true" />
								<Label text="Subtitle Subtitle Subtitle" wrapping="true" />
							</VBox>
						</f:content>
					</f:Card>

					<f:Card>
						<f:layoutData>
							<grid:ResponsiveColumnItemLayoutData columns="1" rows="1" />
						</f:layoutData>
						<f:content>
							<VBox class="sapUiSmallMargin">
								<Title text="1 / 1" wrapping="true" />
								<Label text="Subtitle Subtitle Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
								<Label text="Subtitle" wrapping="true" />
							</VBox>
						</f:content>
					</f:Card>
				</grid:items>
			</grid:CSSGrid>
		</content>
	</Panel>
</mvc:View>