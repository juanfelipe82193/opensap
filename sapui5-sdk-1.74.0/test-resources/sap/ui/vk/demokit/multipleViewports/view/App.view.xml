<mvc:View
	controllerName="sap-demo.controller.App"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:vk="sap.ui.vk"
	displayBlock="true"
>
	<App class="sapUiDemoWT" id="sap-demo">
		<Page title="{i18n>pageTitle}">
			<l:Splitter orientation="Vertical" height="100%" width="100%">
				<l:Splitter>
					<l:layoutData>
						<l:SplitterLayoutData size="30%"/>
					</l:layoutData>
					<vk:Viewport id="viewportA">
						<vk:layoutData>
							<l:SplitterLayoutData size="25%"/>
						</vk:layoutData>
					</vk:Viewport>
					<vk:Viewport id="viewportB">
						<vk:layoutData>
							<l:SplitterLayoutData/>
						</vk:layoutData>
					</vk:Viewport>
				</l:Splitter>
				<l:Splitter>
					<vk:Viewport id="viewportC">
						<vk:layoutData>
							<l:SplitterLayoutData size="60%"/>
						</vk:layoutData>
					</vk:Viewport>
					<vk:Viewport id="viewportD">
						<vk:layoutData>
							<l:SplitterLayoutData/>
						</vk:layoutData>
					</vk:Viewport>
				</l:Splitter>
			</l:Splitter>
		</Page>
	</App>
</mvc:View>