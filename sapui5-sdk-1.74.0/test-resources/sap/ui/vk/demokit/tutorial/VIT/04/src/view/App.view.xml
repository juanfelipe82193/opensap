<mvc:View controllerName="viewportScenetree.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:vk="sap.ui.vk"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	displayBlock="true">
	<Shell>
		<App id="viewportScenetree">
			<Page title="{i18n>pageTitle}">
				<l:Splitter height="100%">
					<l:contentAreas>
						<vk:Viewport id="viewport">
							<vk:layoutData>
								<l:SplitterLayoutData size="auto" minSize="200"/>
							</vk:layoutData>
						</vk:Viewport>
						<vk:SceneTree id="scenetree">
							<vk:layoutData>
								<l:SplitterLayoutData size="320px" minSize="200"/>
							</vk:layoutData>
						</vk:SceneTree>
					</l:contentAreas>
				</l:Splitter>
			</Page>
		</App>
	</Shell>
</mvc:View>