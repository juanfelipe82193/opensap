<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="Shape Detailed Information"
		class="sapUiContentPadding"
		placement="HorizontalPreferedRight">
		
		<Panel width="100%">
			<FlexBox direction="Column" alignItems="Start" justifyContent="Start">
				<items>
					<Label text="Shape ID:"/>
					<Label text="{/id}:"/>
					<Label text="Start Time:"/>
					<Label text="{/startTime}"/>
					<Label text="End Time:"/>
					<Label text="{/endTime}"/>
				</items>
			</FlexBox>
		</Panel>

	</ResponsivePopover>
</core:FragmentDefinition>
