<core:View xmlns:core="sap.ui.core"
           xmlns="sap.m"
           xmlns:ui="sap.ca.ui"
           xmlns:html="http://www.w3.org/1999/xhtml"
           controllerName="sap.ca.ui.sample.views.control.AddPicture"
        >
<!--

 ******  ******* ******  ******  *******  *****     *    ******* ******* ******  ***
 *     * *       *     * *     * *       *     *   * *      *    *       *     * ***
 *     * *       *     * *     * *       *        *   *     *    *       *     * ***
 *     * *****   ******  ******  *****   *       *     *    *    *****   *     *  *
 *     * *       *       *   *   *       *       *******    *    *       *     *
 *     * *       *       *    *  *       *     * *     *    *    *       *     * ***
 ******  ******* *       *     * *******  *****  *     *    *    ******* ******  ***

     Update the AddPicture under demokit/samples
-->
    <Page id="page">
        <content>

            <html:h1>Demo page to demonstrate Add Picture</html:h1>

            <html:h4>Tab embedded without pictures</html:h4>

            <ui:AddPicture id="tabControl"
                           show="onShow"
                           buttonPageType="Tab"
                           uploadUrl="/sap/bc/ui2/encode_file?sap-server=gm6_https"
                           imageUploadFailed="onUploadFailed"
                           compression="high"
                           fileNotSupported="onFileNotSupported">
                           </ui:AddPicture>

            <html:h4>Tab embedded with pictures</html:h4>

            <ui:AddPicture pictures="{/Pictures}"
                           text="Custom Text"
                           width="50%"
                           pictureAlign="Right"
                           show="onShow"
                           buttonPageType="Tab"
                           uploadUrl="/sap/bc/ui2/encode_file?sap-server=gm6_https"
                           imageUploadFailed="onUploadFailed" itemSize="100"
                           fileNotSupported="onFileNotSupported">
                <ui:pictures>
                    <ui:PictureItem source="{Source}" name="{Name}"/>
                </ui:pictures>
            </ui:AddPicture>

            <html:h4>Tab embedded without pictures, Read Only (editable = 'false')</html:h4>

            <ui:AddPicture editable="false" show="onShow" buttonPageType="Tab" fileNotSupported="onFileNotSupported"></ui:AddPicture>

            <html:h4>Tab embedded with pictures, Read Only (editable = 'false')</html:h4>

            <ui:AddPicture editable="false" pictures="{/Pictures}" show="onShow" buttonPageType="Tab" itemSize="100" fileNotSupported="onFileNotSupported">
                <ui:pictures>
                    <ui:PictureItem source="{Source}" name="{Name}" width="100px" height="100px"/>
                </ui:pictures>
            </ui:AddPicture>


            <html:h4>Form embedded without pictures</html:h4>

            <ui:AddPicture show="onShow" buttonPageType="Form" fileNotSupported="onFileNotSupported"></ui:AddPicture>

            <html:h4>Form embedded with pictures</html:h4>

            <ui:AddPicture pictures="{/Pictures}" show="onShow" buttonPageType="Form" fileNotSupported="onFileNotSupported">
                <ui:pictures>
                    <ui:PictureItem source="{Source}" name="{Name}" />
                </ui:pictures>
            </ui:AddPicture>

            <html:h4>Form embedded without pictures, Read Only (editable = 'false')</html:h4>

            <ui:AddPicture editable="false" show="onShow" buttonPageType="Form" fileNotSupported="onFileNotSupported"></ui:AddPicture>

            <html:h4>Form embedded with pictures, Read Only (editable = 'false')</html:h4>

            <ui:AddPicture editable="false" pictures="{/Pictures}" buttonPageType="Form" fileNotSupported="onFileNotSupported">
                <ui:pictures>
                    <ui:PictureItem source="{Source}" name="{Name}" />
                </ui:pictures>
            </ui:AddPicture>

        </content>
        <footer>
            <Bar>
            </Bar>
        </footer>
    </Page>
</core:View>
