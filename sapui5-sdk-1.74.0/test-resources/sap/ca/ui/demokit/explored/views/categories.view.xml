<core:View
	controllerName="views.categories"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		title="sap.m Explored"
		icon="images/144_iPad_Retina_Web_Clip.png">
		<List
			items="{
				path:'/categories',
				sorter: {
					path: 'name',
					descending: false
				}
			}">
			<items>
				<StandardListItem
					title="{name}"
					icon="sap-icon://open-folder"
					type="Active"
					press="itemPress" />
			</items>
		</List>
	</Page>
</core:View>