<core:View xmlns:core="sap.ui.core"
           xmlns="sap.m" xmlns:chart="sap.ca.ui.charts" controllerName="sap.ca.ui.sample.views.control.BubbleChartToolbar">
    <Page id="pageBubbleToolBar">
    <content>
      <chart:ChartToolBar
        showFullScreen="true"
        chartTitle="My nice chart Title">
        <chart:charts>
           <chart:BubbleChart
                    showCustomLabels='true'
                    showDataLabel="false"
                    id="myBubleChartWithToolBar"
                    xAxisFixedRange="true" xAxisMinValue='1369422492000' selectDataPoint="onSelectDataPoint" />
            </chart:charts>
          </chart:ChartToolBar>
      </content>
    <footer>
        <Bar></Bar>
    </footer>
    </Page>
</core:View>
